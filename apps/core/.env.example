# Application
NODE_ENV=development
PORT=8080
APP_URL=http://localhost:8080
JWT_SECRET=dev-secret
JWT_EXPIRY=7d
APP_DOMAIN=localhost

# CORS Configuration
# APP_DOMAIN: Main application domain for subdomain matching (e.g., "apartments.ai")
# This allows all subdomains like "*.apartments.ai" to make requests
APP_DOMAIN=

# External APIs (optional)
OPENAI_API_KEY=
RESEND_API_KEY=

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=apartmentsai_dev
DB_USE_SSL=false

# Throttling
THROTTLER_ENABLED=false
THROTTLER_TTL=60000
THROTTLER_LIMIT=100

LOG_LEVEL=debug

# PostHog Analytics
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com
